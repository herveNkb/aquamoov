{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    {# Message de confirmation, comme quoi l'email à été vérifié  #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">{{ message }}</div>
    {% endfor %}

    <main class="container-form">
        <h1 class="title-form h1-reset-password">Réinitialisez votre mot de passe</h1>
        <div class="form container-form-reset-password">
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email, {
                label: 'E-mail',
                attr: {
                    placeholder: 'E-mail'
                },
                row_attr: {
                    class: 'form-floating'
                }
            }) }}
            <div class="explicative-text-reset-password">
                <small>
                    Entrez votre adresse e-mail et nous vous enverrons un lien pour
                    réinitialiser votre mot de passe.
                </small>
            </div>
            <div class="container-btn-form">
                <button class="btn-form btn-form-position btn-login">Envoyer</button>
            </div>
            {{ form_end(requestForm) }}
        </div>
    </main>}
{% endblock %}
